<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_splash"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:padding="@dimen/content_margin"
  android:background="@android:color/black"
  tools:context="com.feathersoft.githubber.SplashActivity">

  <TextView
    android:id="@+id/splash.text.app_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/app_name"
    android:textSize="64sp"
    android:textColor="@android:color/white"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/splash.text.app_name"
    android:layout_alignEnd="@+id/splash.text.app_name"
    android:gravity="center_vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
      android:text="An open client for"
      android:layout_marginStart="@dimen/content_margin_half"
      android:layout_marginEnd="@dimen/content_margin_half"/>

    <ImageView
      android:id="@+id/splash.img.github_shadow"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:src="@drawable/ic_github_shadow"/>

  </LinearLayout>

</RelativeLayout>
