<resources>

  <!-- Base application theme. -->
  <style name="GitHubber.Theme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@android:color/black</item>
    <item name="colorPrimaryDark">@android:color/black</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:actionBarStyle">@style/GitHubber.Toolbar</item>
  </style>

  <style name="GitHubber.Theme.Splash">
    <item name="android:windowDisablePreview">true</item>
  </style>

  <style name="GitHubber.Toolbar" parent="Widget.AppCompat.ActionBar">
    <item name="background">?attr/colorPrimary</item>
    <item name="android:minHeight">?attr/actionBarSize</item>
  </style>

</resources>
